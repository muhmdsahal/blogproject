<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="article.css" type="text/css">
</head>
<body>
    <div class="wrapper ">
        <div class="container-main ">
          <div class="container">
            <div class="items">Article</div>
            <div class="items"><a href="/addarticle">Add Article</a></div>
            <div class="items"><a href="/logout">Logout</a></div>
            
          </div>
          <div class="container-fluid">
            <div class="header">
              <h1>SPORTS MANAGER</h1>
            </div>
            <div class="img">
              
            </div>
            <div class="blog">
              <div class="leftsports">
                <%i=1%>
            <div><h2>Football | Cricket | Tennis</h2></div>
            <% data.reverse().forEach(function(art) { %>
                
                <% if(art.topic==='sports'){ %>
              <div><h3><%= art.title %></h3></div>  
              <div><h5><%= art.date%></h5></div>
              <div><p><%= art.content %></p></div> 
              <span><a class="text-danger" href="/delete_sports/<%=art._id%>" onclick="return confirm('Are you sure you want to Reject?')">Reject</a></span>
              <span><a class="text-danger" href="/accept_sports/<%=art._id%>" onclick="return confirm('Are you sure you want to Accept?')">Accept</a></span>
                <% } %>
                <% }) %>
              </div>
              <div class="rightsports">

              </div>
            </div>
          </div>
        </div>
    </div>
    
</body>
</html>