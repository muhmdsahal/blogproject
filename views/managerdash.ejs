<!DOCTYPE html>
<html>
    <header>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        
    </header>
    <body>
        <div class="wrapper bg-dark" ">

        <nav class="navbar navbar-expand-md bg-dark ">
            <div class="container-fluid ">
              <a  class="nav-link active text-uppercase text-white" href="admindash"> BACK</a>
              <ul class="navbar-nav nav-underline text-white">
               
                <li class="nav-item border border-white rounded ">
                  <a class="nav-link active text-uppercase text-white" href="addmanager">ADD MANAGER</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link active text-uppercase text-white " href="logout">Logout</a>
                  </li>
               
              </ul>
            </div>
              </nav>
             <div class="container-fluid text-white bg-dark border border-white"><h1 class="text-center text-white">MANAGER DETAILS</h1></div> 

        
        <%= message%>
        <table class="table table-dark table-striped">
            <tr align="center">
                <th >SI NO</th>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
                <th>Status</th>
               
            </tr>
            
            <%i=1%>
            <% data.reverse().forEach(function(manager) { %>
                 
               <tr align="center" >
                <td><%=i++%></td>
                 <td><%= manager.name %></td>
                 <td><%= manager.email %></td>
                 <td>
                    <a href="/approve_manager/<%=manager._id%>">Approve</a>
                    /
      <a href="/reject_manager/<%=manager._id%>" onclick="return confirm('Are you sure you want to Reject?')">Reject</a>
      /
      <a href="viewprofile/<%=manager._id%>">View profile</a>
                 </td>
               <td>  <div class="text-danger"><% if(manager.status===0){ %>
                    Rejected
                    <% } %> </div>
                   <div class="text-success"> <% if(manager.status===1){ %>
                        Accepted
                      <% } %>
                    </div>
                </td>
               </tr>
            
            <% }) %>
        </table>
    </div>
    </body>
</html>